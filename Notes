import java.util.Random;
import java.util.*;

public class Notes {

    private Random random = new Random();
    private int[] notes;
    private int sumOfPoints;

    public Notes() {
        this.notes = new int[5];

    }

    public void notes() {
        for (int i = 0; i < 5; i++) {
            int note = random.nextInt(20);
            while (note < 10) {
                note = random.nextInt(20);
            }
            notes[i] = note;
        }

    }

    @Override
    public String toString() {
        return Arrays.toString(this.notes);
    }

    public void sort() {
        Arrays.sort(this.notes);
    }

    public void swapNotes() {
        this.notes[0] = 0;
        this.notes[4] = 0;
    }

    public int sumNotes() {

        for (int i : this.notes) {
            sumOfPoints += i;
        }
        return sumOfPoints;
    }

    public int getSingleNote(int note) {
        return this.notes[note];
    }
    
}
